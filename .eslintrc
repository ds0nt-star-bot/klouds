{
  "parser": "babel-eslint",
  "plugins": [
    "babel"
  ],
  "rules": {
    "strict": 0,
    "babel/object-shorthand": 1,
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "no-unused-vars": [2, {"vars": "all", "args": "after-used"}]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "ecmaFeatures": {
      "jsx": true,
      "modules": true
  }
}